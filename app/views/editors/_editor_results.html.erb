<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Division</th>
                <th>Boxer A</th>
                <th>Boxer B</th>
                <th>Result</th>
                <th>Method</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @fights.each do |fight| %>
                <tr>
                    <td><%= fight.fight_date.strftime("%d %b %Y") %></td>
                    <td><%= fight.weight_class.titleize %></td>
                    <td>
                        <%= link_to fight.boxer_a.full_name, boxer_profile_path(fight.boxer_a), class: "text-decoration-none" %>
                        <% if fight.winner_id == fight.boxer_a.id %>
                            <span class="badge bg-success ms-1">W</span>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to fight.boxer_b.full_name, boxer_profile_path(fight.boxer_b), class: "text-decoration-none" %>
                        <% if fight.winner_id == fight.boxer_b.id %>
                            <span class="badge bg-success ms-1">W</span>
                        <% end %>
                    </td>
                    <td>
                        <% if fight.draw %>
                            <span class="badge bg-secondary">Draw</span>
                        <% elsif fight.winner_id %>
                            <% if fight.winner_id == fight.boxer_a.id %>
                                <%= fight.boxer_a.full_name %>
                            <% elsif fight.winner_id == fight.boxer_b.id %>
                                <%= fight.boxer_b.full_name %>
                            <% end %>
                        <% end %>
                    </td>
                    <td><%= fight.method&.titleize %></td>
                    <td>
                        <a href="#" class="edit-fight-btn ms-3" data-fight-id="<%= fight.id %>" style="display: flex; align-items: center; justify-content: center; width: 38px; height: 38px; background: #fff0f0; border: 1.5px solid #ba0404;">
                            <i class="fas fa-pencil-alt" style="color: #ba0404; font-size: 1.2rem;"></i>
                        </a>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<style>
  .edit-fight-btn:hover {
    background: #ba0404;
    border-color: #ba0404;
    text-decoration: none;
  }
  .edit-fight-btn:hover i {
    color: #fff;
  }
  .edit-fight-btn i,
  .edit-fight-btn i:before,
  .edit-fight-btn i:after {
    text-decoration: none !important;
    border-bottom: none !important;
    box-shadow: none !important;
    outline: none !important;
    color: #ba0404 !important;
  }
  .edit-fight-btn svg path {
    stroke: #ba0404 !important;
    fill: #ba0404 !important;
  }
  .edit-fight-btn,
  .edit-fight-btn:focus,
  .edit-fight-btn:active,
  .edit-fight-btn:visited {
    text-decoration: none !important;
    outline: none !important;
    box-shadow: none !important;
  }
</style> 