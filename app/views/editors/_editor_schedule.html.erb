<% @fights.each do |fight| %>
  <div class="fight-row d-flex align-items-center justify-content-between mb-3 p-3" style="background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.04);">
    <div class="d-flex align-items-center gap-4 flex-grow-1">
      <div class="fight-date text-muted" style="min-width: 140px;">
        <i class="fas fa-calendar-alt me-1"></i>
        <%= fight.fight_date&.strftime('%B %d, %Y') || 'TBD' %>
      </div>
      <div class="fight-boxer-a text-end" style="min-width: 180px;">
        <strong><%= fight.boxer_a.full_name %></strong>
      </div>
      <div class="fight-vs text-center" style="min-width: 60px;">
        <span class="badge bg-primary" style="font-size: 14px; padding: 3px 16px; line-height: 1.1;">VS</span>
      </div>
      <div class="fight-boxer-b text-start" style="min-width: 180px;">
        <strong><%= fight.boxer_b.full_name %></strong>
      </div>
      <div class="fight-division text-muted" style="min-width: 120px;">
        Division: <%= fight.weight_class&.titleize %>
      </div>
      <div class="fight-venue text-muted" style="min-width: 180px;">
        <i class="fas fa-map-marker-alt me-1"></i>
        <%= fight.fight_location %>
      </div>
    </div>
    <a href="#" class="edit-fight-btn ms-3" data-fight-id="<%= fight.id %>" style="display: flex; align-items: center; justify-content: center; width: 38px; height: 38px; border-radius: 50%; background: #fff0f0; border: 1.5px solid #ba0404;">
      <i class="fas fa-pencil-alt" style="color: #ba0404; font-size: 1.2rem;"></i>
    </a>
  </div>
<% end %>

<style>
  .fight-row:hover {
    background: #fff6f6;
    box-shadow: 0 4px 16px rgba(186,4,4,0.08);
  }
  .edit-fight-btn:hover {
    background: #ba0404;
    border-color: #ba0404;
    text-decoration: none;
  }
  .edit-fight-btn:hover i {
    color: #fff;
  }
  .edit-fight-btn i,
  .edit-fight-btn i:before,
  .edit-fight-btn i:after {
    text-decoration: none !important;
    border-bottom: none !important;
    box-shadow: none !important;
    outline: none !important;
    color: #ba0404 !important; /* Ensures the icon stays red */
  }
  .edit-fight-btn svg path {
    stroke: #ba0404 !important;
    fill: #ba0404 !important;
  }
  .edit-fight-btn,
  .edit-fight-btn:focus,
  .edit-fight-btn:active,
  .edit-fight-btn:visited {
    text-decoration: none !important;
    outline: none !important;
    box-shadow: none !important;
  }

  .badge-primary {
    background: #7badff !important;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll('.edit-fight-btn').forEach(function(btn) {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        var fightId = btn.getAttribute('data-fight-id');
        // Show the edit modal for this fight (to be implemented)
        document.getElementById('edit-fight-modal-' + fightId).style.display = 'flex';
      });
    });
  });
</script> 