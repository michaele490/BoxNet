<div class="container-fluid py-4">
  <div class="text-center mb-4">
    <h1 class="mb-2">Results</h1>
    <div class="red-underline"></div>
  </div>

  <!-- Filters -->
  <div class="row justify-content-center mb-5">
    <div class="col-md-10">
      <%= form_tag results_path, method: :get, id: "results-filter-form" do %>
        <div class="editor-filter-card d-flex align-items-end w-100 gap-3" style="flex-wrap: wrap;">
          <!-- Date Range Filter -->
          <div>
            <label class="form-label mb-1">Date</label>
            <div class="d-flex gap-1">
              <input type="date" name="date_from" value="<%= params[:date_from] %>" class="form-control form-control-sm" placeholder="From">
              <input type="date" name="date_to" value="<%= params[:date_to] %>" class="form-control form-control-sm" placeholder="To">
            </div>
          </div>
          <!-- Division Filter -->
          <div>
            <label class="form-label mb-1">Division</label>
            <select name="division" id="division-select" class="slim-select form-control form-control-sm" style="min-width: 110px;">
              <option value="">All</option>
              <% Boxer::WEIGHT_CLASSES.each do |division| %>
                <option value="<%= division %>" <%= 'selected' if params[:division] == division %>><%= division.titleize %></option>
              <% end %>
            </select>
          </div>
          <!-- Gender Filter -->
          <div>
            <label class="form-label mb-1">Gender</label>
            <select name="gender" id="gender-select" class="slim-select form-control form-control-sm" style="min-width: 90px;">
              <option value="">All</option>
              <option value="Male" <%= 'selected' if params[:gender] == 'Male' %>>Male</option>
              <option value="Female" <%= 'selected' if params[:gender] == 'Female' %>>Female</option>
            </select>
          </div>
          <!-- Boxer Name Search -->
          <div class="flex-grow-1">
            <label class="form-label mb-1">&nbsp;</label>
            <div class="search-bar-wrapper">
              <input type="text" name="search" value="<%= params[:search] %>" class="form-control form-control-sm awesomplete" placeholder="Enter boxer name" autocomplete="off">
              <button type="submit" class="search-icon-btn">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Results Table -->
  <div class="card mt-4">
    <div class="card-body p-0">
      <div class="table-responsive results-table-scroll">
        <table class="table mb-0">
          <thead class="table-light">
            <tr>
              <th>Date</th>
              <th>Boxer 1</th>
              <th>Boxer 2</th>
              <th>Division</th>
              <th>Location</th>
            </tr>
          </thead>
          <tbody>
            <% if @fights.any? %>
              <% @fights.each do |fight| %>
                <tr>
                  <td><%= fight.fight_date&.strftime("%Y-%m-%d") || "TBD" %></td>
                  <td>
                    <%= link_to fight.boxer_a.full_name, boxer_profile_path(fight.boxer_a), class: "text-decoration-none" %>
                    <% if fight.draw %>
                      <span class="result-box draw">Draw</span>
                    <% elsif fight.winner_id == fight.boxer_a.id %>
                      <span class="result-box win">Win</span>
                    <% else %>
                      <span class="result-box loss">Loss</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to fight.boxer_b.full_name, boxer_profile_path(fight.boxer_b), class: "text-decoration-none" %>
                    <% if fight.draw %>
                      <span class="result-box draw">Draw</span>
                    <% elsif fight.winner_id == fight.boxer_b.id %>
                      <span class="result-box win">Win</span>
                    <% else %>
                      <span class="result-box loss">Loss</span>
                    <% end %>
                  </td>
                  <td><%= fight.weight_class.titleize %></td>
                  <td><%= fight.fight_location %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="text-center py-4">No results found</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .red-underline {
      height: 2px;
      background-color: #ba0404;
      width: 100%;
      margin-bottom: 1rem;
    }
    .editor-filter-card {
      background: #ba0404;
      border-radius: 10px;
      padding: 18px 30px 18px 30px;
      display: flex;
      align-items: end;
      justify-content: center;
      gap: 28px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.04);
      width: 100%;
      max-width: 1100px;
      margin: 0 auto;
      flex-wrap: wrap;
    }
    .editor-filter-card label.form-label {
      color: #fff;
      font-weight: 600;
      font-size: 1.1rem;
      margin-bottom: 6px;
      letter-spacing: 0.5px;
    }
    .editor-filter-card .form-control,
    .editor-filter-card .form-select {
      border-radius: 6px;
      border: none;
      font-size: 1rem;
      min-width: 120px;
      box-shadow: none;
    }
    .editor-filter-card .form-control:focus,
    .editor-filter-card .form-select:focus {
      outline: none;
      box-shadow: 0 0 0 2px #fff2;
      border: none;
    }
    .editor-filter-card .btn {
      border-radius: 6px;
      font-weight: 500;
      min-width: 70px;
    }
    @media (max-width: 1200px) {
      .editor-filter-card {
        flex-wrap: wrap;
        gap: 12px;
      }
      .search-bar-wrapper, .editor-filter-card input[name='search'] {
        max-width: 100% !important;
      }
    }
    @media (max-width: 900px) {
      .editor-filter-card {
        flex-direction: column;
        gap: 12px;
        padding: 18px 10px;
        align-items: stretch;
      }
    }
    .search-bar-wrapper {
      width: 100%;
      position: relative;
      height: 38px;
      display: flex;
      align-items: center;
    }
    .awesomplete {
      display: block;
    }
    .awesomplete > ul {
      background: #fff;
      box-shadow: 0 2px 12px rgba(0,0,0,0.12);
      border-radius: 0 0 8px 8px;
      margin-top: 2px;
      padding: 0;
      list-style: none;
      max-height: 260px;
      overflow-y: auto;
      z-index: 1050;
      position: absolute;
      left: 0;
      right: 0;
    }
    .awesomplete > ul > li {
      padding: 8px 16px;
      cursor: pointer;
      font-size: 1rem;
      color: #222;
      background: #fff;
    }
    .awesomplete > ul > li[aria-selected="true"] {
      background: #f5f5f5;
      color: #ba0404;
    }
    .form-control-sm {
      height: 38px;
    }
    .results-table-scroll {
      max-height: 500px;
      overflow-y: auto;
    }
    .result-box {
      display: inline-block;
      width: 44px;
      height: 22px;
      line-height: 22px;
      font-size: 13px;
      font-weight: bold;
      color: #fff;
      text-align: center;
      border-radius: 4px;
      margin: 0 6px 0 6px;
      vertical-align: middle;
    }
    .result-box.win {
      background: #19d219;
    }
    .result-box.loss {
      background: #e53935;
    }
    .result-box.draw {
      background: #ffc107;
      color: #000;
      width: 44px;
    }
  </style>
  <link href="https://cdn.jsdelivr.net/npm/slim-select@2.8.0/dist/slimselect.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.min.css" />
<% end %>

<% content_for :javascript do %>
  <script src="https://cdn.jsdelivr.net/npm/slim-select@2.8.0/dist/slimselect.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.5/awesomplete.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      new SlimSelect({ select: '#division-select' });
      new SlimSelect({ select: '#gender-select' });

      // Awesomplete autocomplete for boxer search
      var input = document.querySelector('input[name="search"]');
      if (input) {
        var awesomplete = new Awesomplete(input, { minChars: 1, maxItems: 10 });
        input.setAttribute('autocomplete', 'off');
        input.addEventListener("input", function() {
          var query = input.value;
          if (query.length > 0) {
            fetch("/boxers/autocomplete?term=" + encodeURIComponent(query))
              .then(response => response.json())
              .then(data => {
                awesomplete.list = data.map(b => b.name);
              });
          }
        });
      }

      // Auto-submit on filter change
      var form = document.getElementById("results-filter-form");
      var division = document.getElementById("division-select");
      var gender = document.getElementById("gender-select");
      var dateFrom = document.querySelector('input[name="date_from"]');
      var dateTo = document.querySelector('input[name="date_to"]');

      if (division) {
        division.addEventListener("change", function() {
          form.submit();
        });
      }
      if (gender) {
        gender.addEventListener("change", function() {
          form.submit();
        });
      }
      if (dateFrom) {
        dateFrom.addEventListener("change", function() {
          form.submit();
        });
      }
      if (dateTo) {
        dateTo.addEventListener("change", function() {
          form.submit();
        });
      }
    });
  </script>
<% end %>