<div class="container-fluid py-4">
  <div class="text-center mb-4">
    <h1 class="mb-2">Fixtures</h1>
    <div class="results-underline"></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
      <!-- Filters -->
      <form id="fixtures-filter-form">
        <div class="results-filter">
          <select name="division" id="division-select" class="form-select filter-select">
            <option value="">Division</option>
            <option value="Heavyweight">Heavyweight</option>
            <option value="Light Heavyweight">Light Heavyweight</option>
            <option value="Welterweight">Welterweight</option>
            <option value="Lightweight">Lightweight</option>
          </select>
          <select name="nationality" id="nationality-select" class="form-select filter-select">
            <option value="">Nationality</option>
            <option value="England">England</option>
            <option value="Panama">Panama</option>
            <option value="Ukraine">Ukraine</option>
            <option value="Nigeria">Nigeria</option>
          </select>
          <select name="region" id="region-select" class="form-select filter-select">
            <option value="">Region</option>
            <option value="Ireland">Ireland</option>
            <option value="USA">USA</option>
            <option value="Mexico">Mexico</option>
            <option value="Saudi">Saudi</option>
          </select>
          <select name="gender" id="gender-select" class="form-select filter-select">
            <option value="">Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
          </select>
        </div>
      </form>

      <!-- Dummy Fixtures Table -->
      <div class="card mt-4">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table mb-0">
              <thead class="table-light">
                <tr>
                  <th>Date</th>
                  <th>Boxer 1</th>
                  <th>Boxer 2</th>
                  <th>Division</th>
                  <th>Region</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>2024-06-10</td>
                  <td>John Smith</td>
                  <td>Mike O'Neil</td>
                  <td>Heavyweight</td>
                  <td>Ireland</td>
                </tr>
                <tr>
                  <td>2024-06-15</td>
                  <td>Anna Ivanova</td>
                  <td>Maria Lopez</td>
                  <td>Lightweight</td>
                  <td>USA</td>
                </tr>
                <tr>
                  <td>2024-07-01</td>
                  <td>James Brown</td>
                  <td>Samuel Okoye</td>
                  <td>Welterweight</td>
                  <td>Mexico</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>