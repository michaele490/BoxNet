<div class="container-fluid py-4">
  <div class="text-center mb-4">
    <h1 class="mb-2">Add New Boxers</h1>
    <div class="red-underline"></div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Filters and Search -->
      <div class="card mb-4">
        <div class="card-body p-0">
          <div class="row g-0">
            <!-- Division Filter -->
            <div class="col-md-4 border-end">
              <div class="p-3">
                <%= select_tag :division,
                  options_for_select([["Division", ""]] + Boxer::WEIGHT_CLASSES),
                  class: 'form-select filter-select'
                %>
              </div>
            </div>

            <!-- Nationality Filter -->
            <div class="col-md-4 border-end">
              <div class="p-3">
                <%= select_tag :nationality,
                  options_for_select([["Nationality", ""]] + ISO3166::Country.translations.values.sort),
                  class: 'form-select filter-select'
                %>
              </div>
            </div>

            <!-- Search Box -->
            <div class="col-md-4">
              <div class="p-3">
                <%= form_tag assign_boxers_path, method: :get do %>
                  <div class="input-group">
                    <%= text_field_tag :search, params[:search], 
                        class: 'form-control',
                        placeholder: 'Enter boxer name...' %>
                    <button class="btn btn-outline-secondary search-btn" type="submit">
                      <i class="fas fa-search"></i>
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Boxers Table -->
      <div class="card">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table mb-0">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Division</th>
                  <th>Nationality</th>
                  <th>Requests</th>
                </tr>
              </thead>
              <tbody>
                <% if @boxers.any? %>
                  <% @boxers.each do |boxer| %>
                    <tr>
                      <td><%= link_to boxer.full_name, boxer_profile_path(boxer.id), class: 'boxer_link text-decoration-none text-dark' %></td>
                      <td><%= boxer.weight_class.present? ? boxer.weight_class : "N/A" %></td>
                      <td><%= boxer.nationality.present? ? boxer.nationality : "N/A" %></td>
                      <td class="text-start">
                        <% if boxer.boxer_requests.exists?(coach_id: current_coach.id, status: :pending) %>
                          <div class="d-inline-flex gap-2">
                            <button class="btn btn-secondary" disabled>
                              Pending
                            </button>
                            <%= button_to cancel_request_coach_path(boxer_id: boxer.id),
                                method: :delete,
                                class: 'btn btn-outline-danger',
                                form: { class: 'd-inline' } do %>
                              Cancel
                            <% end %>
                          </div>
                        <% else %>
                          <%= button_to send_add_request_coach_path(boxer_id: boxer.id), 
                              method: :post,
                              class: 'btn request-btn' do %>
                            Send add request
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="4" class="text-center py-4 text-muted">
                      No unassigned boxers found
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
